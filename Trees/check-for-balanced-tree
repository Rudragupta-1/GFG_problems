//User function Template for Java


/* A binary tree node class
class Node
{
	int data;
	Node left,right;
	
	Node(int d)
	{
		data = d;
		left = right = null;		
	}
} */

class Tree
{
    int func(Node root){
        if(root==null)
        return 0;
        int lh=func(root.left);
        if(lh==-1) return -1;
        int rh=func(root.right);
        if(rh==-1) return -1;
        if(Math.abs(lh-rh)>1) return -1;
        else return 1+Math.max(lh,rh);
    }
    //Function to check whether a binary tree is balanced or not.
    boolean isBalanced(Node root)
    {
	// Your code here
	int x=func(root);
	if(x!=-1)
	return true;
	else return false;
    }
}

