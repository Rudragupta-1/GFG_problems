//User function Template for Java
/*
Node defined as
class Node{
    int data;
    Node left,right;
    Node(int d){
        data=d;
        left=right=null;
    }
}
*/
class Solution
{ 
    
    //Function to convert binary tree into circular doubly linked list.
    Node bTreeToClist(Node root)
    {
        inOrder(root);
        head.left=prev;
        prev.right=head;
        return head;
    }
    private Node head=null;
    private Node prev=null;
     void inOrder(Node root){
        //your code here
        if(root==null){
            return ;
        }
        inOrder(root.left);
        if(prev==null)
        {
            head=root;
        }
            else{
                root.left=prev;
                prev.right=root;
            }
            prev=root;
           inOrder(root.right);
    }
    
}
