    int data;
    Node left, right;
   Node(int item)
   {
        data = item;
        left = right = null;
    }
} */

class Solution {
    // Function to convert a binary tree into its mirror tree.
    Node func(Node node){
        if(node==null)
        return null;
        Node left=func(node.left);
        Node right=func(node.right);
        node.left=right;
        node.right=left;
        return node;
    }
    void mirror(Node node) {
        // Your code here
        func(node);
        
        
    }
}
